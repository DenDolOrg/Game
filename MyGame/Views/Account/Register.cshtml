@model MyGame.Models.RegisterModel

@{
    ViewBag.Title = "Registration";
}

@section Addons{
    <link href="~/Content/RegistrationAndLogin.css" type="text/css" , rel="stylesheet" />
    <script src="~/Scripts/Bibles/jquery.validate.min.js"></script>
    <script src="~/Scripts/Bibles/jquery.validate.unobtrusive.min.js"></script>
}



    <div id="form-wrapper">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "valid-message" })

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "reg_label" })
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "valid-message" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "reg_label" })
                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Surname, "", new { @class = "valid-message" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Nickname, htmlAttributes: new { @class = "reg_label" })
                @Html.EditorFor(model => model.Nickname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nickname, "", new { @class = "valid-message" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, "E-mail", htmlAttributes: new { @class = "reg_label" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "valid-message" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, "Password", htmlAttributes: new { @class = "reg_label" })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "valid-message" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, "Confirm password", htmlAttributes: new { @class = "reg_label" })
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "valid-message" })
            </div>

            <div class="form-group">
                <input type="submit" value="Register" id="reg_summit_btn" />
            </div>
        }
    </div>
