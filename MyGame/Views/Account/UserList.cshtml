
@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Addons
{
    <script src="~/Scripts/UserController.js"></script>
}

<h1>List of Users:</h1>
<div id="tableListWrapper">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Surame</th>
                <th scope="col">Nickname</th>
                @if (HttpContext.Current.User.IsInRole("admin"))
                {
                    <th scope="col">Actions</th>
                }
            </tr>
        </thead>
        <tbody ng-controller="UserController">
            <tr ng-repeat="userModel in userList.data">
                <th scope="row">{{userModel.Id}}</th>
                <td>{{userModel.Name}}</td>
                <td>{{userModel.Surname}}</td>
                <td>{{userModel.UserName}}</td>
                @if (HttpContext.Current.User.IsInRole("admin"))
                {
                    <td>
                        <div class="btn-group">
                            <a href="#" ng-click="DeteleTable(userModel)" class="btn btn-secondary btn-warning btn-sm">Edit</a>
                            <a href="#" ng-click="DeteleTable(userModel)" class="btn btn-secondary btn-danger btn-sm">Delete</a>
                        </div>

                    </td>
                }
                </tr>
        </tbody>
    </table>
</div>