@model MyGame.Models.ActionModel

@{
    ViewBag.Title = "Table";
}

<h1>List of tables:</h1>
<div id="tableListWrapper">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Player 1</th>
                <th scope="col">Player 2</th>
                <th scope="col">Create date</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody ng-controller="TableListController">
            <tr ng-repeat="tableModel in tableList.data">
                <th scope="row">{{tableModel.Id}}</th>
                <td ng-repeat="opponent in tableModel.Opponents">
                    {{opponent.Name}} {{opponent.Surname}}
                </td>

                <td>
                    Some Date
                </td>
                <td>
                    <div class="btn-group">
                        <a href="#" ng-click="DeteleTable(tableModel)" class="btn btn-secondary btn-warning btn-sm">Join</a>
                        <a href="#" ng-click="DeteleTable(tableModel)" class="btn btn-secondary btn-danger btn-sm">Delete</a>
                    </div>

                </td>
            </tr>
        </tbody>
    </table>
</div>

@section Addons
{
    <script type="text/javascript">
        var actionAddress = @Html.Raw(Json.Encode(Model.ActionAddress));
    </script>
    <script src="~/Scripts/TableController.js"></script>
}

@Html.ActionLink("Create table", "CreateNewTable")

