<div id="nav-wrapper">

    

    <div class="btn-group" role="group">
        <div class="dropdown">

            <button class="btn dropdown-toggle btn-light" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Tables
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenu">
                <li>@Html.ActionLink("Available games", "GameList", "Game", new { gameType = "available" }, new { @class = "dropdown-item" })</li>

                <li>@Html.ActionLink("My games", "GameList", "Game", new { gameType = "myGames" }, new { @class = "dropdown-item" })</li>
                @if (HttpContext.Current.User.IsInRole("admin"))
                {
                    <li>
                        @Html.ActionLink("All games", "GameList", "Game", new { gameType = "all" }, new { @class = "dropdown-item" })
                    </li>
                }

                <li>@Html.ActionLink("Create new game", "CreateNewGame", "Game", null, new { @class = "dropdown-item" })</li>
            </ul>

        </div>

        <button class="btn btn-light" onclick="UserBtnClick()">
            Users
        </button>

    </div>
</div>

<script type="text/javascript">
    function UserBtnClick() {
        window.location.href = '/Account/UserList';
    }
</script>